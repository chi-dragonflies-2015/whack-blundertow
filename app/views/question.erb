<div class="container">


<div class="question_container">
  <a href="/vote">
  <div class='arrow-up'>
  </div>
  </a>
  <a href="vote/">
  <div class='arrow-down'>
  </div>
  </a>
    <div class="question_body">
      <h4><%= @question.title %></h4>
    </div>
      <% @q_comments.each do |comment| %>
      <p><%= comment.body %></p>
      <% end %>


    <form id="question_comment" method="post" action="/posts">
      <input type="text" id="new_comment" name="comment" placeholder="comment">
      <input type="submit" value="comment">
    </form>



</div>

<div class="answer">

  <% @answers.each do |answer| %>
  <a href="/vote">
  <div class='arrow-up'>
  </div>
  </a>
  <a href="vote/">
  <div class='arrow-down'>
  </div>
  </a>
  <h4><%= answer.body %></h4>

  <% answer.comments.each do |comment| %>
    <p><%= comment.body %> </p>
    <% end %>
  <% end %>
  <form id="answer_comment" method="post" action="/posts">
    <input type="text" id="new_comment" name="comment" placeholder="comment">
    <input type="submit" value="comment">
  </form>


</div>

<div class="new_answer">
  <form id="answer_comment" method="post" action="/posts">
    <input type="text" id="new_comment" name="answer" placeholder="new answer">
    <input type="submit" value="answer">
  </form>




</div>




</div>

